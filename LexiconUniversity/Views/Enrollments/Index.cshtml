@model IEnumerable<LexiconUniversity.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th></th>
    </tr>

@foreach (var enrollment in Model) {
    <tr>
        <td>            @Html.DisplayFor(modelItem => enrollment.Course.Title)                   </td>
        <td>            @Html.DisplayFor(modelItem => enrollment.Student.FirstName)                   </td>
        <td>            @Html.DisplayFor(modelItem => enrollment.Student.LastName)                   </td>
        <td>            @Html.DisplayFor(modelItem => enrollment.Grade)                       </td>
        <td>            @Html.DisplayFor(modelItem => enrollment.EnrollmentDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = enrollment.ID }) |
            @Html.ActionLink("Details", "Details", new { id = enrollment.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = enrollment.ID })
        </td>
    </tr>
}

</table>
